{{#if logueado}}
  <p>Ya estás logueado</p>
  <a href="http://localhost:8080/profile">Ver perfil</a>
  <a href="http://localhost:8080/products">Ir a comprar</a>

  <form action="/api/sessions/" method="get"><button
      type="submit"
    >LOGOUT</button></form>

{{else}}

  <form
    action="/api/sessions/"
    method="post"
    style="width:20rem;display:flex;flex-direction: column;"
  >

    <label for="email">Email:
      <input id="email" name="email" type="email" /></label>
    <label for="password">Contraseña:<input
        id="password"
        name="password"
        type="password"
      /></label>

    <button type="submit">Enviar</button>
  </form>

  <a href="http://localhost:8080/register">¿No tenés cuenta?¡Registrate!</a>

{{/if}}

{{#if loginError}}
  <p>"Nombre de usuario o contraseña incorrecto"</p>
{{/if}}